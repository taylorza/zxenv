{
    "version": "0.2.0",
    "configurations": [
    {{if (eq .Emulator "cspect")}}
        {
            "preLaunchTask": "Build",
            "type": "dezog",
            "request": "launch",
            "name": "CSpect",                
            "remoteType": "cspect",     
            "sjasmplus": [
                {
                    "path": "{{.Name}}.sld"
                }
            ], 
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10
            },
            "startAutomatically": false,
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assertion enable"
            ],
           
// connect to the CSpect emulator via TCIP          
            "cspect": 
            {
                    "hostname": "localhost",
                    "port": 11000
            },
            "rootFolder": "${workspaceFolder}",
            "listFiles": [
              {
                  "path": "project.lst",
                  "useFiles": true,
                  "asm": "{{.DevPath}}/emulator/sjasmplus",
                  {{if (eq .Type "DRV")}}
                  "mainFile": "src/driver.asm"
                  {{else}}
                  "mainFile": "src/main.asm"
                  {{end}}                  
              }
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            {{if (eq .Type "NEX")}}
            "load": "{{.Name}}.nex",
            {{else if (eq .Type "DOT")}}
            "load": "{{.Name}}",
            {{end}}
            "skipInterrupt": false,
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        }
    {{else}}
        {
            "preLaunchTask": "Build",
            "type": "dezog",
            "request": "launch",
            "name": "ZEsarUX",                
            "remoteType": "zrcp",     
            "sjasmplus": [
                {
                    "path": "{{.Name}}.sld"
                }
            ], 
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10
            },
            "startAutomatically": false,
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assertion enable"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "stack_top",
            {{if (eq .Type "NEX")}}
            "load": "{{.Name}}.nex",
            {{else if (eq .Type "DOT")}}
            "load": "{{.Name}}",
            {{end}}
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        }
    {{end}},
        {
            "preLaunchTask": "Build",
            "type": "dezog",
            "request": "launch",
            "name": "Internal Simulator",
            "remoteType": "zsim",
            "zsim": {
                "visualMemory": true,
                "memoryModel": "ZXNEXT",
                "ulaScreen": true,
                "zxBorderWidth": 20,
                "vsyncInterrupt": true,
                "zxKeyboard": true,
                "zxBeeper": true
            },
            "sjasmplus": [
                {
                    "path": "{{.Name}}.sld"
                }
            ],
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10,
                "codeCoverageEnabled": true
            },
            "startAutomatically": false,
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assertion enable",
                "-wpmem enable"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "stack_top",
            {{if (eq .Type "NEX")}}
            "load": "{{.Name}}.nex",
            {{else if (eq .Type "DOT")}}
            "load": "{{.Name}}",
            {{end}}
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        }
    ]
}