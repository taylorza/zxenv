{
    "version": "0.2.0",
    "configurations": [
    {{if (eq .Emulator "cspect")}}
        {
            "preLaunchTask": "Build",
            "type": "dezog",
            "request": "launch",
            "name": "CSpect",                
            "remoteType": "cspect",     
            "sjasmplus": [
                {
                    "path": "{{.Name}}.sld"
                }
            ], 
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10
            },
            "startAutomatically": false,
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assertion enable"
            ],
           
// connect to the CSpect emulator via TCIP          
            "cspect": 
            {
                    "hostname": "localhost",
                    "port": 11000
            },
            "rootFolder": "${workspaceFolder}",
            "listFiles": [
              {
                  "path": "project.lst",
                  "useFiles": true,
                  "asm": "{{.DevPath}}/emulator/sjasmplus",
                  "mainFile": "src/main.asm"
              }
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "load": "{{.Name}}.nex",
            "skipInterrupt": false,
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        }
    {{else}}
        {
            "preLaunchTask": "Build",
            "type": "dezog",
            "request": "launch",
            "name": "ZEsarUX",                
            "remoteType": "zrcp",     
            "sjasmplus": [
                {
                    "path": "{{.Name}}.sld"
                }
            ], 
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10
            },
            "startAutomatically": false,
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assertion enable"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "stack_top",
            "load": "{{.Name}}.nex",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
    {{end}}
    ]
}